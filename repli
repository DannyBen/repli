# :command.usage
repli_usage() {
  printf "repli - Replicate Workspace Tool\n\n"

  printf "%s\n" "Usage:"
  printf "  repli COMMAND\n"
  printf "  repli [COMMAND] --help | -h\n"
  printf "  repli --version | -v\n"
  echo
  # :command.usage_commands
  printf "%s\n" "Commands:"
  printf "  %s   Upload a file to Replicate\n" "upload"
  printf "  %s   Call Replicate using a configuration file and save the result\n" "get   "
  echo

  # :command.long_usage
  if [[ -n "$long_usage" ]]; then
    # :command.usage_options
    printf "%s\n" "Options:"

    # :command.usage_fixed_flags
    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "--version, -v"
    printf "    Show version number\n"
    echo

    # :command.usage_environment_variables
    printf "%s\n" "Environment Variables:"

    # :environment_variable.usage
    printf "  %s\n" "LOG_LEVEL"
    printf "    Log level\n"
    printf "    %s\n" "Allowed: debug, info, warn, error"
    printf "    %s\n" "Default: info"
    echo

  fi
}

